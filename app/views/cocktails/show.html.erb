<h1><%= @cocktail.name %></h1>

<ul>
  <%  @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> : <%= dose.ingredient.name %>
      <%= link_to "effacer", dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %></li>
  <% end %>

</ul>

<%= link_to "add a new dose", new_cocktail_dose_path(@cocktail) %>

<%= link_to 'Retour', root_path %>
